{
	"info": {
		"_postman_id": "7159679d-1f13-4713-ade2-f819c2aded48",
		"name": "authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_uid": "9570826-7159679d-1f13-4713-ade2-f819c2aded48"
	},
	"item": [
		{
			"name": "oauth2/token",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "beab4b22-e2f2-4166-b1b9-fd5a901bf92a",
						"exec": [
							"if (responseCode.code >= 200 && responseCode.code < 300) {\r",
							"    var json = JSON.parse(responseBody);\r",
							"    postman.setEnvironmentVariable('token', json.access_token);\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"id": "c26bad97-314a-4101-b3e6-41d6cc5919c0",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{auth_pass}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{auth_user}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "{{user_name}}",
							"type": "text"
						},
						{
							"key": "password",
							"value": "{{user_pass}}",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "{{user_grant}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{host}}/authentication/oauth/token",
					"host": [
						"{{host}}"
					],
					"path": [
						"authentication",
						"oauth",
						"token"
					]
				}
			},
			"response": []
		}
	]
}